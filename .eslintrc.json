{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "plugins": ["html"],
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["**/nexus-*.js", "**/nexus-*.mjs"],
      "rules": {
        "prettier/prettier": "off",
        "no-console": "off",
        "no-unused-vars": "warn"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "public/**",
    "*.min.js"
  ]
}

